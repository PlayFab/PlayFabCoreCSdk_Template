<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!--Sets up PlayFabCore path properties to be used by PlayFabCore SDK projects as well as consumers of the SDK.-->
  
  <PropertyGroup Label="Paths">
    <PlayFabCoreRoot>$(MSBuildThisFileDirectory)..\</PlayFabCoreRoot>
    <PlayFabCoreExternalDir>$(PlayFabCoreRoot)external\</PlayFabCoreExternalDir>
    <PlayFabCoreSourceDir>$(PlayFabCoreRoot)code\</PlayFabCoreSourceDir>
    <PlayFabCoreTestDir>$(PlayFabCoreRoot)test\</PlayFabCoreTestDir>
    <PlayFabCoreBuiltDir>$(PlayFabCoreRoot)built\</PlayFabCoreBuiltDir>
  </PropertyGroup>

  <!--Reuse libHttpClient platform detection logic-->
  <Import Condition="'$(PlayFabPlatform)' == ''" Project="$(PlayFabCoreExternalDir)\libHttpClient\platform_select.props" />
  <PropertyGroup>
    <PlayFabPlatform>$(HCPlatform)</PlayFabPlatform>
    <PlayFabCoreProjectName>PlayFabCore.$(PlayFabPlatform)</PlayFabCoreProjectName>
  </PropertyGroup>

  <PropertyGroup Label="BinPaths">
    <PlayFabCoreOutDir>$(PlayFabCoreBuiltDir)bins\$(Platform)\$(Configuration)\$(PlayFabCoreProjectName)\</PlayFabCoreOutDir>
    <PlayFabCoreIntDir>$(PlayFabCoreBuiltDir)obj\$(Platform)\$(Configuration)\$(PlayFabCoreProjectName)\</PlayFabCoreIntDir>
  </PropertyGroup>

</Project>