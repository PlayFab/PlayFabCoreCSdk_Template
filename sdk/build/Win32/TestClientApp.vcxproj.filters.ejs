<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <Filter Include="Source" />
    <Filter Include="Source\Tests" />
  </ItemGroup>
  <ItemGroup><%
for (var file in projectFiles.TestClientApp) { 
    var filter = projectFiles.TestClientApp[file];
    var header = file.endsWith(".h"); 
    if (header) { %>
    <ClInclude Include="$(PlayFabCoreTestDir)\<%- file %>" >
      <Filter><%- filter %></Filter>
    </ClInclude><%
    } else { %>
    <ClCompile Include="$(PlayFabCoreTestDir)\<%- file %>" >
      <Filter><%- filter %></Filter>
    </ClCompile><%
    }
} %>
    <ClInclude Include="$(PlayFabCoreTestDir)\TestApp\TestAppPch.h" >
      <Filter>Source</Filter>
    </ClInclude>
    <ClCompile Include="$(PlayFabCoreTestDir)\TestApp\TestAppPch.cpp">
      <Filter>Source</Filter>
    </ClCompile>
    <ClCompile Include="$(PlayFabCoreTestDir)\TestApp\Win32\MainWin32.cpp">
      <Filter>Source</Filter>
    </ClCompile>
    <ClCompile Include="$(PlayFabCoreTestDir)\TestApp\Win32\TestAppWin32.cpp">
      <Filter>Source</Filter>
    </ClCompile>
  </ItemGroup>
</Project>